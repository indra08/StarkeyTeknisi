<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/labelLayananStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type Stempel:"/>

                <TextView
                    android:id="@+id/tvValueLayananStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelLayananStempel"
                    android:text="xxTypeStempel"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/labelQtyStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:layout_below="@+id/labelUkuranStempel"/>

                <TextView
                    android:id="@+id/tvValueQtyStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvValueUkuranStempel"
                    android:layout_toRightOf="@+id/labelQtyStempel"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/labelUkuranStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran:"
                    android:layout_below="@+id/labelLayananStempel"/>

                <TextView
                    android:id="@+id/tvValueUkuranStempel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xUkuran"
                    android:layout_below="@+id/tvValueLayananStempel"
                    android:layout_toRightOf="@+id/labelUkuranStempel"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/labelKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan:"
                    android:layout_below="@+id/labelQtyStempel"/>

                <TextView
                    android:id="@+id/tvValueKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xKeterangan"
                    android:layout_below="@+id/labelKeterangan"/>

                <TextView
                    android:id="@+id/labelBiayaStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biaya:"
                    android:layout_below="@+id/tvValueKeterangan"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvValueBiaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:layout_below="@+id/tvValueKeterangan"
                    android:layout_toRightOf="@+id/labelBiayaStemp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/labelJasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jasa:"
                    android:layout_below="@+id/labelBiayaStemp"/>

                <TextView
                    android:id="@+id/tvValueJasaStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:layout_below="@+id/labelBiayaStemp"
                    android:layout_toRightOf="@+id/labelJasa"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/labelDp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DP:"
                    android:layout_below="@+id/labelJasa"/>

                <TextView
                    android:id="@+id/tvValueDpStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:layout_below="@+id/labelJasa"
                    android:layout_toRightOf="@+id/labelDp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/labelEstimasiHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi harga awal :"
                    android:layout_below="@+id/labelJasa"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvValueHargaAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelEstimasiHarga"
                    android:text="xEstimasiHarga"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/labelGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Total :"
                    android:textSize="20dp"
                    android:layout_below="@+id/tvValueHargaAwal"/>

                <TextView
                    android:id="@+id/tvValueGrandTotalStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Rp"
                    android:layout_below="@+id/labelGrandTotal"
                    android:textColor="@color/colorMerah"/>

                <TextView
                    android:id="@+id/labelBiayaLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biaya Lain :"
                    android:layout_below="@+id/tvValueGrandTotalStemp"/>

                <EditText
                    android:id="@+id/etBiayaLainStempel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelBiayaLain"
                    android:inputType="number"
                    android:fitsSystemWindows="true"
                    android:drawableLeft="@drawable/ic_rp_small"/>

                <TextView
                    android:id="@+id/labelTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips :"
                    android:layout_below="@+id/etBiayaLainStempel"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/etTipsStempel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelTips"
                    android:inputType="number"
                    android:fitsSystemWindows="true"
                    android:drawableLeft="@drawable/ic_rp_small"/>

                <Button
                    android:id="@+id/btnUbahDetailStemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etTipsStempel"
                    android:background="@drawable/background_button_kotak"
                    android:text="Simpan"
                    android:textColor="@color/colorPutih"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>




    </ScrollView>

</RelativeLayout>