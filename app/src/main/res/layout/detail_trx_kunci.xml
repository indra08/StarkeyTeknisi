<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/labelLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layanan :"/>

                <TextView
                    android:id="@+id/tvValueLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/labelLayanan"
                    android:text="xxLayanan"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/labelKunci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kunci :"
                    android:layout_below="@+id/labelLayanan"/>

                <TextView
                    android:id="@+id/tvValueKunci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xKunci"
                    android:layout_below="@+id/tvValueLayanan"
                    android:layout_toRightOf="@+id/labelKunci"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:id="@+id/imageViewTrxKunci"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tvValueKunci"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_no_image"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/labelKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan :"
                    android:layout_below="@+id/imageViewTrxKunci"/>

                <TextView
                    android:id="@+id/tvValueKeterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xKeterangan"
                    android:layout_below="@+id/labelKeterangan"/>

                <TextView
                    android:id="@+id/labelBiaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biaya:"
                    android:layout_below="@+id/tvValueKeterangan"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvValueBiaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:layout_below="@+id/tvValueKeterangan"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/labelBiaya"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/labelJasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jasa:"
                    android:layout_below="@+id/labelBiaya"/>

                <TextView
                    android:id="@+id/tvValueJasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:layout_below="@+id/tvValueBiaya"
                    android:layout_toRightOf="@+id/labelJasa"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/labelBiayaDasarOngkir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biaya Dasar(ongkos kirim):"
                    android:layout_below="@+id/tvValueJasa"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvBiayaDasarDialogKunci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0"
                    android:layout_below="@+id/tvValueJasa"
                    android:layout_toRightOf="@+id/labelBiayaDasarOngkir"
                    android:layout_marginLeft="4dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/labelEstimasiHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi harga awal :"
                    android:layout_below="@+id/labelBiayaDasarOngkir"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvValueEstimasiHargaAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelEstimasiHarga"
                    android:text="xEstimasiHarga"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/labelGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Total :"
                    android:textSize="20dp"
                    android:layout_below="@+id/tvValueEstimasiHargaAwal"/>

                <TextView
                    android:id="@+id/tvValueGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Rp"
                    android:layout_below="@+id/labelGrandTotal"
                    android:textColor="@color/colorMerah"/>

                <TextView
                    android:id="@+id/labelBiayaLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biaya Lain :"
                    android:layout_below="@+id/tvValueGrandTotal"/>

                <EditText
                    android:id="@+id/editTextBiayaLain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelBiayaLain"
                    android:inputType="number"
                    android:fitsSystemWindows="true"
                    android:drawableLeft="@drawable/ic_rp_small"/>

                <TextView
                    android:id="@+id/labelTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips :"
                    android:layout_below="@+id/editTextBiayaLain"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editTextTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelTips"
                    android:inputType="number"
                    android:fitsSystemWindows="true"
                    android:drawableLeft="@drawable/ic_rp_small"/>

                <Button
                    android:id="@+id/btnUbahDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextTips"
                    android:background="@drawable/background_button_kotak"
                    android:text="Simpan"
                    android:textColor="@color/colorPutih"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </ScrollView>
</RelativeLayout>