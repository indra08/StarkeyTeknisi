<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.starkey.mitra.Stempel.BatalOrderStempelActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarBatalOrderStempel">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarBatalOrderStempel"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.AppBarOverlay" >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarBatalOrderStempel"
        android:padding="8dp">

        <Button
            android:id="@+id/btnKonfirmBatal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:textColor="@color/colorPutih"
            android:background="@color/colorDarkMerah"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/btnKonfirmCari"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cari Lagi"
            android:textColor="@color/colorPutih"
            android:background="@drawable/background_button_kotak"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/labelKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:text="Keterangan"
            android:textColor="@color/colorHitam"
            android:textSize="17sp"
            android:layout_below="@+id/btnKonfirmBatal"/>

        <EditText
            android:id="@+id/textareaKet"
            style="@style/style_textarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelKet"/>

        <Button
            android:id="@+id/btnKonfirmSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textareaKet"
            android:layout_marginTop="50dp"
            android:text="Simpan"
            android:background="@drawable/background_button_kotak"
            android:textColor="@color/colorPutih"/>



    </RelativeLayout>

</RelativeLayout>
