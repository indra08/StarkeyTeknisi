<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvProdusenStempel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/colorPutih">

                <ImageView
                    android:id="@+id/ivProdusenStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_default_stempel"/>

                <TextView
                    android:id="@+id/tvNamaProdusenStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nama produsen"
                    android:layout_toRightOf="@+id/ivProdusenStemp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/tvAlamatProdusenStemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alamat produsen"
                    android:layout_below="@+id/tvNamaProdusenStemp"
                    android:layout_toRightOf="@+id/ivProdusenStemp"
                    android:layout_marginLeft="4dp"/>


            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>