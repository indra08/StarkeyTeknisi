<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hitam"
    tools:context="id.starkey.mitra.Login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:id="@+id/tvTampungTokenFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="token"
                android:visibility="invisible"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/ic_teknisi_kunci" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/background_edittext"
                android:fontFamily="monospace"
                android:gravity="center"
                android:hint="Username"
                android:padding="2dp"
                android:textColor="@color/colorPutih"
                android:textColorHint="@color/colorPutih"
                android:textSize="22sp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext"
                android:fontFamily="monospace"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textColor="@color/colorPutih"
                android:textColorHint="@color/colorPutih"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtLupaPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:text="Lupa password?"
                android:textColor="@color/colorPutih"
                android:textSize="17sp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_button"
                android:fontFamily="monospace"
                android:gravity="center"
                android:hint="Login"
                android:padding="2dp"
                android:textColor="@color/colorHitam"
                android:textColorHint="@color/colorHitam"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="monospace"
                    android:text="Belum punya akun? "
                    android:textColor="@color/colorPutih"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDaftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="monospace"
                    android:text="daftar."
                    android:textColor="@color/colorPutih"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>



    </ScrollView>
</RelativeLayout>
